{
  "name": "@synzhang/react-permission",
  "version": "0.0.11",
  "description": "A Permission component for React.",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\"",
    "check-types": "tsc --noEmit",
    "check-types:watch": "npm run check-types -- --watch",
    "clean": "rm -rf ./dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "rollup -c",
    "build": "npm run clean && npm run build:types && npm run build:js",
    "prepare": "husky install"
  },
  "files": [
    "src",
    "dist"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "standard-version": {
    "releaseCommitMessageFormat": "chore(release): {{currentTag}} [skip ci]"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/synzhang/react-permission.git"
  },
  "keywords": [
    "react",
    "permission"
  ],
  "author": "Syn Zhang <zeyanzhang.china@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/synzhang/react-permission/issues"
  },
  "homepage": "https://github.com/synzhang/react-permission#readme",
  "dependencies": {
    "core-js": "^3.21.1",
    "react": "^16.8.0 || ^17.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.29.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "2.5.1",
    "rollup": "^2.68.0",
    "standard-version": "^9.3.2",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0"
  }
}
